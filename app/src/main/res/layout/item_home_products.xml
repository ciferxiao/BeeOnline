<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="今日必抢"
        android:textColor="@color/gray_33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_stroke_grey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rush_buy1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="限时购"
                    android:textColor="@color/gray_33" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">


                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="85dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/img"
                        android:layout_below="@+id/img"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/now_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥195"
                            android:textColor="@color/red_e5"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:text="￥896"
                            android:textColor="@color/gray_66"
                            android:textSize="9sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/time_hint"
                    android:text="16点场"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_hint"
                    android:layout_marginTop="6dp"
                    android:text="03:05:50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/line"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@drawable/radius_30dp_red_fc"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="限时直降"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_de" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/time_hint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_4dp"
                    android:text="每日上新"
                    android:textColor="@color/gray_33" />


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="85dp"
                    android:layout_height="@dimen/dimen_80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_hint2"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/img2"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="新品尝鲜价"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/radius_30dp_red_fc"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="为你选新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>