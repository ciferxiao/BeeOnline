<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="140dp">


        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/gray_de" />

        <View
            android:id="@+id/bot_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray_de" />

        <View
            android:id="@+id/left_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/gray_de" />

        <View
            android:id="@+id/right_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/gray_de" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="85dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_below="@+id/top_line"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@+id/right_line"
            android:layout_toRightOf="@+id/left_line"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/price"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/right_line"
            android:layout_toRightOf="@+id/left_line"
            android:ellipsize="end"
            android:maxLength="5"
            android:maxLines="1"
            android:text="ROYAL"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_12" />


        <LinearLayout
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bot_line"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toLeftOf="@+id/right_line"
            android:layout_toRightOf="@+id/left_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥195"
                android:textColor="@color/red_e5"
                android:textSize="@dimen/sp_12"
                 />

            <TextView
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:gravity="bottom"
                android:text="￥896"
                android:textColor="@color/black_7b"
                android:textSize="9sp"
                 />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
